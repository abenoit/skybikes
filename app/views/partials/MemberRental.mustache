<div class="Rental">
  <div class="title-logout">
    <h3>Hello {{email}}</h3>

    <div class="mdl-cell mdl-cell--2-col mdl-textfield mdl-js-textfield">
        <button type="button" id="logout" class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect">Logout</button>
    </div>
  </div>

  <div class="rental-instructions">
    <span>Select the station where you want to rent your bike !</span>
  </div>

  <div class="stations-cards">
  {{#stations}}
  <div class="demo-card-square mdl-card mdl-shadow--2dp">
    <div class="mdl-card__title mdl-card--expand">
      <h2 class="mdl-card__title-text">{{location}}</h2>
    </div>
    <div class="mdl-card__supporting-text">
      <span>Bikes Availables : {{bikesAvailable}}</span>
    </div>
    <div class="mdl-card__actions mdl-card--border">
      <a data-id={{id}} class="rent mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect">
        Rent here
      </a>
    </div>
  </div>
  {{/stations}}
  </div>
</div>